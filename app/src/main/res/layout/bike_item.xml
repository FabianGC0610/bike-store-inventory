<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bike_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bike_image_container"
            style="@style/DetailsImageContainerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin_large"
            android:layout_marginTop="@dimen/layout_margin_large"
            android:layout_marginBottom="@dimen/layout_margin_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/bike_item_image_size"
                android:layout_height="@dimen/bike_item_image_size"
                android:scaleType="centerCrop"
                android:contentDescription="@string/bike_item_image_description"
                tools:srcCompat="@drawable/welcome_image" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/model"
            style="@style/ListItemTitleStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginEnd="@dimen/layout_margin"
            app:layout_constraintBottom_toTopOf="@+id/color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/bike_image_container"
            app:layout_constraintTop_toTopOf="@+id/bike_image_container"
            app:layout_constraintVertical_chainStyle="spread"
            tools:text="Name: Specialized Epic" />

        <TextView
            android:id="@+id/color"
            style="@style/ListItemSubtitleStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginEnd="@dimen/layout_margin"
            app:layout_constraintBottom_toTopOf="@+id/price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/bike_image_container"
            app:layout_constraintTop_toBottomOf="@+id/model"
            tools:text="Color: Red" />

        <TextView
            android:id="@+id/price"
            style="@style/ListItemSubtitleStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginEnd="@dimen/layout_margin"
            app:layout_constraintBottom_toBottomOf="@+id/bike_image_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/bike_image_container"
            app:layout_constraintTop_toBottomOf="@+id/color"
            tools:text="Price: $10,000.00" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>