<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bike_image_container"
            style="@style/DetailsImageContainerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                tools:srcCompat="@drawable/welcome_image" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/model"
            style="@style/ListItemTitleStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            tools:text="Name: Specialized Epic"
            app:layout_constraintBottom_toTopOf="@+id/color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/bike_image_container"
            app:layout_constraintTop_toTopOf="@+id/bike_image_container"
            app:layout_constraintVertical_chainStyle="spread" />

        <TextView
            android:id="@+id/color"
            style="@style/ListItemSubtitleStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            tools:text="Color: Red"
            app:layout_constraintBottom_toTopOf="@+id/price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/bike_image_container"
            app:layout_constraintTop_toBottomOf="@+id/model" />

        <TextView
            android:id="@+id/price"
            style="@style/ListItemSubtitleStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            tools:text="Price: $10,000.00"
            app:layout_constraintBottom_toBottomOf="@+id/bike_image_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/bike_image_container"
            app:layout_constraintTop_toBottomOf="@+id/color" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>