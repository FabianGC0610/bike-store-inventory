<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoginTitleStyle">
        <item name="android:fontFamily">@font/rock_salt</item>
        <item name="android:textSize">@dimen/login_title_text_size</item>
        <item name="android:textColor">@color/white_text_color</item>
    </style>

    <style name="LoginInputLabelStyle">
        <item name="android:fontFamily">@font/amiko_semibold</item>
        <item name="android:textSize">@dimen/login_label_text_size</item>
        <item name="android:textColor">@color/white_text_color</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/white_text_color</item>
        <item name="boxStrokeColor">@drawable/box_stroke_color_selector</item>
        <item name="boxStrokeWidth">@dimen/box_stroke_width</item>
        <item name="endIconTint">@color/white_background_color</item>
        <item name="hintTextColor">@color/white_text_color</item>
    </style>

    <style name="WelcomeTitleStyle">
        <item name="android:fontFamily">@font/amiko_semibold</item>
        <item name="android:textSize">@dimen/login_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="WelcomeAppNameStyle">
        <item name="android:fontFamily">@font/rock_salt</item>
        <item name="android:textSize">@dimen/text_size_extra_large</item>
        <item name="android:textColor">@color/white_text_color</item>
    </style>

    <style name="WelcomeMessageStyle">
        <item name="android:fontFamily">@font/amiko_semibold</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="InstructionsTitleStyle">
        <item name="android:fontFamily">@font/amiko_semibold</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/white_text_color</item>
    </style>

    <style name="InstructionsTextStyle">
        <item name="android:fontFamily">@font/amiko_semibold</item>
        <item name="android:textSize">@dimen/text_size_extra_small</item>
        <item name="android:textColor">@color/white_text_color</item>
    </style>

    <style name="InstructionsImageContainerStyle">
        <item name="cardCornerRadius">@dimen/instructions_card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="android:backgroundTint">@color/background</item>
    </style>

    <style name="BottomButtonStyle">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="cornerRadius">@dimen/corner_radius_size_small</item>
        <item name="strokeColor">@color/white_text_color</item>
        <item name="strokeWidth">@dimen/box_stroke_width</item>
    </style>

    <style name="ListTitleStyle">
        <item name="android:fontFamily">@font/rock_salt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_extra_small</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="ListBikesContainerStyle">
        <item name="cardCornerRadius">@dimen/corner_radius_size_small</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="ListItemTitleStyle">
        <item name="android:fontFamily">@font/amiko_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="ListItemSubtitleStyle">
        <item name="android:fontFamily">@font/amiko_semibold</item>
        <item name="android:textSize">@dimen/text_size_extra_small</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="ListButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:backgroundTint">@color/orange_add_button</item>
        <item name="android:elevation">@dimen/card_elevation</item>
        <item name="iconGravity">textTop</item>
        <item name="iconSize">@dimen/list_icon_button_size</item>
        <item name="iconTint">@color/colorSecondaryDark</item>
        <item name="shapeAppearance">?attr/shapeAppearanceCornerLarge</item>
        <item name="strokeColor">@color/colorSecondary</item>
        <item name="strokeWidth">@dimen/box_stroke_width_large</item>
    </style>

    <style name="DetailsTitleStyle">
        <item name="android:fontFamily">@font/amiko_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="DetailsInputLabelStyle">
        <item name="android:fontFamily">@font/amiko_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/grey_text_color</item>
    </style>

    <style name="DetailsInputInformationStyle">
        <item name="android:fontFamily">@font/amiko_semibold</item>
        <item name="android:textSize">@dimen/text_size_extra_small</item>
        <item name="android:textColor">@color/grey_text_color</item>
    </style>

    <style name="DetailsInformationStyle">
        <item name="android:fontFamily">@font/amiko_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_extra_small</item>
        <item name="android:textColor">@color/colorSecondaryDark</item>
    </style>

    <style name="DetailsImageContainerStyle">
        <item name="cardCornerRadius">@dimen/icon_corner_radius_size</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="DetailsImageButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:backgroundTint">@color/orange_add_button</item>
        <item name="android:elevation">@dimen/card_elevation</item>
        <item name="iconGravity">textTop</item>
        <item name="iconSize">@dimen/add_bike_image_button_icon_size</item>
        <item name="iconTint">@color/colorSecondaryDark</item>
        <item name="shapeAppearance">?attr/shapeAppearanceCornerExtraLarge</item>
        <item name="strokeColor">@color/colorSecondary</item>
        <item name="strokeWidth">@dimen/box_stroke_width_large</item>
    </style>

    <style name="DetailsTextInputLayoutStyle">
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/colorSecondaryDark</item>
        <item name="boxStrokeColor">@drawable/add_box_stroke_color_selector</item>
        <item name="boxStrokeWidth">@dimen/box_stroke_width_large</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/colorSecondaryDark</item>
        <item name="hintTextColor">@color/colorSecondaryDark</item>
    </style>

</resources>
